#include <stdio.h>

#define INF 9999

struct node
{
    int dist[20];
    int from[20];
} route[10];

int main()
{
    int dm[20][20], no;
    int i, j, k;
    int flag;

    printf("Enter number of nodes: ");
    scanf("%d", &no);

    printf("Enter the distance matrix (use %d for no link):\n", INF);

    for (i = 0; i < no; i++)
    {
        for (j = 0; j < no; j++)
        {
            scanf("%d", &dm[i][j]);
            route[i].dist[j] = dm[i][j];
            route[i].from[j] = j;
        }
        route[i].dist[i] = 0;   // Distance to itself is zero
        route[i].from[i] = i;
    }

    /* Bellmanâ€“Ford updates */
    do
    {
        flag = 0;

        for (i = 0; i < no; i++)
        {
            for (j = 0; j < no; j++)
            {
                for (k = 0; k < no; k++)
                {
                    if (route[i].dist[j] >
                        route[i].dist[k] + route[k].dist[j])
                    {
                        route[i].dist[j] =
                            route[i].dist[k] + route[k].dist[j];
                        route[i].from[j] = k;
                        flag = 1;
                    }
                }
            }
        }
    } while (flag);

    /* Print routing tables */
    for (i = 0; i < no; i++)
    {
        printf("\nRouting table for router %c\n", i + 65);
        printf("Destination\tNext Hop\tDistance\n");

        for (j = 0; j < no; j++)
        {
            printf("%c\t\t%c\t\t%d\n",
                   j + 65,
                   route[i].from[j] + 65,
                   route[i].dist[j]);
        }
    }

    return 0;
}
